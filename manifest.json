{
    "manifest_version": 3,
    "name": "YouTube Ad Skipper",
    "description": "This extension will automatically skip YouTube ads when the skip ad button appears.",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon.png"
    }
}